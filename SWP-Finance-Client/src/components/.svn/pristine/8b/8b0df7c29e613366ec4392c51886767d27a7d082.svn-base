@import '../../style/variables.less';

.sn-balance {
    .snSubsidiaryTit {
        position: relative;
        padding: 0.24rem 0.3rem;
        font-size: 0.32rem;
        line-height: 0.42rem;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        color: @fc-label;
    }

    .sidiaryTit {
        width: 1.7rem;
        padding: 0 0.2rem 0 0;
        display: inline-block;
        line-height: 0.42rem;
        vertical-align: middle;
        color: #191919;
    }

    .sidiaryText {
        flex: 1;
        -webkit-flex: 1;
        border: none;
        display: inline-block;
        line-height: 0.42rem;
        color: #191919;
        -webkit-appearance: none;
        appearance: auto;
        -webkit-rtl-ordering: logical;
        -webkit-user-select: text;
        cursor: auto;
        text-rendering: auto;
        text-align: start;
        word-break: break-all;
        word-wrap: break-word;
        vertical-align: middle;
    }

    .sidiaryText:empty:before {
        content: attr(placeholder);
        color: #b2b2b2;
    }

    .sidiaryBut {
        position: absolute;
        width: 1.8rem;
        height: 0.9rem;
        line-height: 0.9rem;
        top: 50%;
        right: 0.2rem;
        margin-top: -0.45rem;
        display: inline-block;
        //cursor: pointer;
        text-align: right;
        //color: @color-blue;
    }

    .colorGray {
        color: #191919;
    }

    .subButton {
        text-align: center;
        margin-top: 0.5rem;
        padding-bottom: 1rem;
    }

    .leftBut {
        background-color: #ccc;
        text-decoration: none;
        width: 3.3rem;
        color: #fff;
        height: 0.8rem;
        line-height: 0.8rem;
        border-radius: 0.06rem;
        font-size: 0.32rem;
        margin-right: 0.15rem;
        display: inline-block;
        cursor: pointer;
        text-align: center;
    }

    .rightBut {
        background-color: @color-blue;
        text-decoration: none;
        width: 3.3rem;
        color: #fff;
        height: 0.8rem;
        line-height: 0.8rem;
        border-radius: 0.06rem;
        font-size: 0.32rem;
        margin-left: 0.15rem;
        display: inline-block;
        cursor: pointer;
        text-align: center;
    }

    .subsidiaryDetail {
        width: 100%;
        background: #fff;
        z-index: 411;
        overflow-y: auto;
    }

    @media screen and (min-width: @pc-width) {
        .subsidiaryMain {
            box-sizing: border-box;
        }

        .snSubsidiaryTit {
            padding: 8px 89px 8px 0;
            font-size: 14px;
            line-height: 28px;
        }

        .sidiaryTit {
            width: 85px;
            padding-right: 14px;
            text-align: right;
        }

        .sidiaryText {
            line-height: 26px;
            border: 1px solid #d2d2d2;
            border-radius: 3px;
            padding: 0 10px 0 10px;
        }

        .sidiaryBut {
            height: 30px;
            line-height: 30px;
            right: 29px;
            margin-top: -15px;
            padding-left: 5px;
            background-size: 19px 21px;
            vertical-align: middle;
            text-align: left;
            //color: @color-blue;
        }

        .subButton {
            margin-top: 20px;
            padding-bottom: 50px;
        }

        .leftBut {
            background-color: #f25e3d;
            height: 30px;
            line-height: 30px;
            border-radius: 3px;
            font-size: 16px;
            margin-right: 50px;
            width: 72px;
        }

        .rightBut {
            height: 30px;
            line-height: 30px;
            border-radius: 3px;
            font-size: 16px;
            margin-left: 50px;
            width: 72px;
        }
    }
}