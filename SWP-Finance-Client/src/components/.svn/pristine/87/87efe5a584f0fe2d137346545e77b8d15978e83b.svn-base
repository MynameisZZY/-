@import '../../style/common.less';


.sn-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .2);
}

.sn-actionsheet-mask-enter,
.sn-actionsheet-mask-leave-active {
  opacity: 0;
}
.sn-actionsheet-mask-leave-active,
.sn-actionsheet-mask-enter-active {
  transition: opacity 400ms!important;
}

//------------------ mobile 移动端通用样式 ---------------------
@media screen and (max-width: @screen-xs-max) {
  .actionsheet{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 1002;
  }
}

//---------- pc端通用样式 包括pc客户端 浏览器端 -------------
@media screen and (min-width: @screen-xs-max) {
  .actionsheet{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    margin:  auto;
    max-width: 1080px;
    z-index: 1002;
  }
}
.actionsheet{
  ul>li{
    width: 100%;
    height: 0.92rem;
    line-height: 0.92rem;
    text-align: center;
    font-size: 0.32rem;
    background-color: #fff;
    border-top: 0.01rem solid #e5e5e5;
    &.active{
      color: @color-blue;
      position: relative;
      &::after{
        content: '';
        position: absolute;
        right: 0.6rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 0.32rem;
        width: 0.38rem;
        height: 0.29rem;
        background-image: url('../resource/img/yes_icon.png');
        background-size: auto 100%;
      }
    }
  }
  
  .opacity{
    opacity: 0.2;
    height: 0.1rem;
  }
  .cancleBtn{
    height: 0.92rem;
    line-height: 0.92rem;
    text-align: center;
    background-color: #fff;
    font-size: 0.32rem;
    color: #333;
  }
  .description{
    height: 0.8rem;
    line-height: 0.8rem;
    color: #999;
    font-size: 0.28rem;
    background-color: #fff;
    text-align: center;
  }
}

.fade-enter-active,
.fade-leave-active {
  transition: all .4s ease;
}

.fade-enter,
.fade-leave-to{
  opacity: 0;
  transform: translate3d(0, 100%, 0);
}

@media screen and (min-width: 480px) {
  .actionsheet{
    ul>li{
      width: 100%;
      height: 0.92rem;
      line-height: 0.92rem;
      text-align: center;
      font-size: 14px;
      background-color: #fff;
      border-top: 0.01rem solid #e5e5e5;
      &.active{
        color: @color-blue;
        position: relative;
        &::after{
          content: '';
          position: absolute;
          right: 0.6rem;
          top: 50%;
          transform: translateY(-50%);
          font-size: 14px;
          width: 0.38rem;
          height: 0.29rem;
          background-image: url('../resource/img/yes_icon.png');
          background-size: auto 100%;
        }
      }
    }
    
    .opacity{
      opacity: 0.2;
      height: 0.1rem;
    }
    .cancleBtn{
      height: 0.92rem;
      line-height: 0.92rem;
      text-align: center;
      background-color: #fff;
      font-size: 14px;
      color: #333;
    }
    .description{
      height: 0.8rem;
      line-height: 0.8rem;
      color: #999;
      font-size: 14px;
      background-color: #fff;
      text-align: center;
    }
  }
}

// menu的颜色配置
.sn-actionsheet-menu-primary{
  color: @color-blue;
}
.sn-actionsheet-menu-warn{
  color: #f83939;
}
.sn-actionsheet-menu-default{
  color: #333;
}
.sn-actionsheet-menu-disabled{
  color: #ccc;
}