* {
    padding: 0;
    margin: 0;
    -webkit-tap-highlight-color: transparent;
}
.classifyTree{
    font-family:"Microsoft YaHei";
    background: #fff;
    //font-size: 0.32rem;
    color: #7f7f7f;  
}
.node {
    position: relative;
    margin-left: 0.3rem;
    border-bottom: 1px solid #e8e8e8;
}
.node .expand, .node .node-check {
    line-height: 0.9rem;
    height: 0.9rem;
}
.node .expand {
    position: absolute;
    display: inline-block;
    width: 0.48rem;
    cursor: pointer;
}
.node .sub {
    background: url("../resource/img/classify/show.png") no-repeat left center;
    background-size: 0.32rem 0.32rem;
}
.node .sub.on {
    background: url("../resource/img/classify/hidden.png") no-repeat left center;
    background-size: 0.32rem 0.32rem;
}
.node .node-check {
    position: absolute;
    left: 0.45rem;
    display: inline-block;
    background: url("../resource/img/classify/radio_sel.png") no-repeat left center;
    background-size: 0.4rem 0.4rem;
    width: 0.48rem;
    cursor: pointer;
}
.node .node-check.on {
    background: url("../resource/img/classify/radio_hover.png") no-repeat left center;
    background-size: 0.4rem 0.4rem;
}
.node .text {
    vertical-align: top;
    padding-left: 0.96rem;
    line-height: 0.9rem;
}
.children {
    margin-left: 0.48rem;
}
.children .node {
    border-top: 1px solid #e8e8e8;
    border-bottom: none;
}
.children .node .node-check {
    left: 0.32rem;
}
.children .node .text {
    padding-left: 0.83rem;
}
.snClassify .weui-cell{
    position: relative;
}
.snClassify .vux-popup-dialog{
    -webkit-overflow-scrolling: initial;
}
@media screen and (min-width: @pc-width) {
    .classifyInput{
        background: rgba(255,255,255,0);width: 320px;
    }
    #classifyTree{
        font-family:"Microsoft YaHei";
        background: #fff;
        font-size: 16px;
        color: #7f7f7f;  
    }
    .node {
        position: relative;
        margin-left: 15px;
        border-bottom: 1px solid #e8e8e8;
    }
    .node .expand, .node .node-check {
        line-height: 45px;
        height: 45px;
    }
    .node .expand {
        position: absolute;
        display: inline-block;
        width: 24px;
        cursor: pointer;
    }
    .node .sub {
        background: url("../resource/img/classify/show.png") no-repeat left center;
        background-size: 16px 16px;
    }
    .node .sub.on {
        background: url("../resource/img/classify/hidden.png") no-repeat left center;
        background-size: 16px 16px;
    }
    .node .node-check {
        position: absolute;
        left: 22px;
        display: inline-block;
        background: url("../resource/img/classify/radio_sel.png") no-repeat left center;
        background-size: 20px 20px;
        width: 24px;
        cursor: pointer;
    }
    .node .node-check.on {
        background: url("../resource/img/classify/radio_hover.png") no-repeat left center;
        background-size: 20px 20px;
    }
    .node .text {
        vertical-align: top;
        padding-left: 48px;
        line-height: 45px;
    }
    .children {
        margin-left: 24px;
    }
    .children .node {
        border-top: 1px solid #e8e8e8;
        border-bottom: none;
    }
    .children .node .node-check {
        left: 16px;
    }
    .children .node .text {
        padding-left: 41px;
    }
    .snClassify .weui-cell__ft{
        padding: 0 20px 0 10px;
    } 
    .snClassify .button-detail {
        position: absolute;
        width: 55px;
        height: 28px;
        top: 50%;
        right: 20px;
        padding-right: 20px;
        margin-top: -14px;
        display: inline-block;
        vertical-align: middle;
        cursor: pointer;         
        font-size: 14px;
        line-height: 28px;
        text-align: center;        
        background: url(../../../resource/img/icon_narrow_right.png) no-repeat right; 
        background-size: 22px 22px;
    }       
}