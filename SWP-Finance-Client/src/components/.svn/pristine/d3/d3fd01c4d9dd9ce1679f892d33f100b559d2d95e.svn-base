@import '../../style/variables.less';
.position-horizontal-demo {
    position: relative;
    height: 100%;
}
.classifyDebit {overflow-y: scroll!important;}
.position-horizontal-demo{}
.classifyInput{background: rgba(255,255,255,0);width: 3.3rem;}
.snClassify .button-detail{
    position: absolute;
    width: 1rem;
    height: 0.5rem;
    top: 50%;
    right: 0.26rem;
    padding-right: 0.35rem;
    margin-top: -0.25rem;
    display: inline-block;
    vertical-align: middle;
    cursor: pointer;
    font-size: 0.32rem;
    line-height: 0.5rem;
    color: @color-blue;
    text-align: center;
    background: url(../../../resource/img/icon_narrow_right.png) no-repeat right; 
    background-size: 0.42rem 0.42rem;  
}
.snClassify .button-detail:hover{
    color: @color-blue;
}
::-webkit-scrollbar:horizontal {height: 0em!important;}
