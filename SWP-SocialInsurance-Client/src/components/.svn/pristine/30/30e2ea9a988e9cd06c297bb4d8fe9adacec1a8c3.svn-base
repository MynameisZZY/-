.snPopupPicker {
    position: relative;

    .vux-label {
        width: 1.7rem;
        padding-right: 0.2rem;
    }

    .weui-cell {
        position: relative;
        display: -ms-flexbox;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        padding: 0.24rem 0.3rem;
        font-size: 0.32rem;
        line-height: 0.42rem;
        color: #191919;
        background: #fff;
    }
}

.snPopupPicker:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 0px;
    border-top: 1px solid #D9D9D9;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.snPopupRight {
    position: relative;
    background: #fff;
}



@media screen and (min-width: @pc-width) {
    .snPopupRight:after {
        display: none;
    }

    .snPopupPicker .weui-media-box {
        padding: 9px 15px;
        position: relative;
    }

    .snPopupPicker .weui-media-box__title {
        font-weight: normal;
        font-size: 14px;
    }

    .snPopupPicker {
        position: relative;

        .vux-label {
            // text-align: right;
            width: 85px !important;
            padding: 0 14px 0 0;
        }

        .weui-cell {
            position: relative;
            display: -ms-flexbox;
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            // padding: 8px 89px 8px 0;
            font-size: 14px;
            line-height: 28px;
            color: #191919;
            background: #fff;
        }
    }

    .snPopupPicker:after {
        display: none;
    }

    .snPopupPicker .weui-panel:before {
        display: none;
    }

}

.weui-cells_radio {

    .weui-cell__ft {
        border: 0;
    }

    .weui-cell__ft:after {
        display: none
    }
}
.checker {
    flex: 1;
