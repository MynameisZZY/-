@import '../../style/common.less';

@keyframes poppu {
  0% {
    transform: translate3d(-50%, -50%, 0) scale(0);
    opacity: 0;
  }
  100% {
    transform: translate3d(-50%, -50%, 0) scale(1);
    opacity: 1;
  }
}
.shadow{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 1000;
}
.sn-modal{
  position: fixed;
  top:50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 1001;
  width: 5.9rem;
  margin: auto;
  background-color: #fff;
  border-radius: 0.3rem;
  animation: poppu .15s;
  .sn-modal-title{
    font-weight: 600;
    font-size: 0.34rem;
    color: #333;
    width: 100%;
    padding-top: 0.48rem;
    box-sizing: border-box;
    text-align: center;   
  }
  .sn-modal-content{
    padding: 0.5rem 0.4rem;
    font-size: 0.32rem;
    color: #333;
    line-height: 0.48rem;
  }
  .sn-modal-footer{
    width: 100%;
    height: 0.92rem;
    line-height: 0.92rem;
    border-radius: 0 0 0.3rem 0.3rem;
    background-color: #fff;
    font-size: 0.32rem;
    display: flex;
    .sn-cancle{
      width: 50%;
      box-sizing: border-box;
      border-top: 0.01rem solid #e5e5e5;
      text-align: center;
      border-right: 0.01rem solid #e5e5e5;
      color: #999;
    }
    .sn-confirm{
      width: 50%;
      box-sizing: border-box;
      border-top: 0.01rem solid #e5e5e5;
      text-align: center;
      color: @color-blue;
    }
    .sn-confirm-only{
      width: 100%;
      border-top: 0.01rem solid #e5e5e5;
      text-align: center;
      color: @color-blue;
    }
  }

}
.description_content p{
  margin-bottom: 0.32rem;
  font-size: 0.3rem;
  line-height: 0.42rem;
  &:last-child{
    margin-bottom: 0;
  }
}

.input-prompt{
  width: 100%;
  height: 0.64rem;
  line-height: 0.64rem;
  border: 0.01rem solid #e5e5e5;
  border-radius: 0.15rem;
  font-size: 0.32rem;
  padding-left: 0.2rem;
  box-sizing: border-box;
  margin: 0.1rem auto;
}

.input-prompt:focus{
  border: 0.01rem solid @color-blue;
}